<?xml version="1.0" encoding="utf-8"?>
<Root>
	<DecisionTree>
		<RootNode type ="InRangeDecision" ownerName ="NPC" targetName ="Player">
			<True type ="Action" actionSet ="SEEK"/>
			<!--<True type ="InRangeDecision" ownerName ="NPC" targetName ="Player">
				<True type ="Action" actionSet ="SEEK"/>
				<False type ="Action" actionSet ="DO_NOTHING"/>
			</True>-->
			<False type ="Action" actionSet ="DO_NOTHING"/>
		</RootNode>
	</DecisionTree>

	<StateMachine owner ="NPC">
		<Condition name ="ifInRange" type ="ConditionInRange" owner ="NPC" target ="Player" thresholdDistance ="5.0"/>
		<Condition name ="ifOutOfRange" type ="ConditionOutOfRange" owner ="NPC" target ="Player" thresholdDistance ="5.0"/>
		
		<!--STATE IS ENUM: 0 = SEEK & 1 = DO_NOTHING-->
		<State name ="seekPlayer" state ="0" actionSet ="SEEK"/>
		<State name ="doNothing" state ="1" actionSet ="DO_NOTHING"/>
		
		<Transition state ="doNothing" condition="ifInRange" targetState="seekPlayer"/>
		<Transition state ="seekPlayer" condition="ifOutOfRange" targetState="doNothing"/>
		
		<InitialState name ="doNothing"/>
	</StateMachine>
</Root>
